<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" AllowsTransparency="True"
        OpacityMask="White" WindowStyle="None" Topmost="True"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid Height="350" Margin="0,0,-0.2,0" VerticalAlignment="Top">
        <Label Content="now playing: AVP Ayyllmao Vs Predator" HorizontalAlignment="Left" VerticalAlignment="Top" Width="525" Height="59" Margin="0,0,-0.2,0" FontFamily="Comic Sans MS" FontSize="24" FontWeight="Bold" Background="Transparent" Foreground="#FFE2F901">
            <Label.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="3"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
